<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/backgroundColor</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="titleTextColor">@color/white</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="fontFamily">@font/lato_regular</item>
        <item name="android:itemTextAppearance">@style/menu_item_color</item>
        <item name="snackbarStyle">@style/SnackBarBackground</item>
        <item name="snackbarButtonStyle">@style/SnackBarButton</item>
        <item name="snackbarTextViewStyle">@style/SnackBarText</item>
        <item name="android:statusBarColor">@color/statusColor</item>
    </style>

    <style name="AppTheme.Toolbar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
    </style>

    <!-- Button -->
    <style name="CompanionButton" parent="Widget.AppCompat.Button">
        <item name="android:minWidth">120dp</item>
        <item name="android:textSize">@dimen/text_button</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/lato_regular</item>
        <item name="android:lineSpacingExtra">0.5sp</item>
    </style>

    <style name="OfflineMapButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/bg_color_primary_button</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/color_button_text</item>
        <item name="android:textSize">@dimen/text_xxsmall</item>
    </style>

    <style name="OfflineMapButton.Delete" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/bg_color_red_button</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/color_red_button_text</item>
        <item name="android:textSize">@dimen/text_xxsmall</item>
    </style>

    <style name="CompanionButton.GreenButton" parent="CompanionButton">
        <item name="android:background">@drawable/bg_color_primary_button</item>
        <item name="android:textColor">@color/color_button_text</item>
    </style>

    <style name="CompanionButton.GreenButton.TextSmall" parent="CompanionButton">
        <item name="android:background">@drawable/bg_color_primary_button</item>
        <item name="android:textColor">@color/color_button_text</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="CompanionButton.GoogleButton" parent="CompanionButton">
        <item name="android:background">@drawable/btn_google_corner</item>
    </style>

    <style name="CompanionButton.GreenButton.Line" parent="CompanionButton">
        <item name="android:background">@drawable/bg_button_green_outline</item>
        <item name="android:textColor">@color/color_button_outline_text</item>
    </style>

    <style name="CompanionButton.RedButton" parent="CompanionButton">
        <item name="android:background">@drawable/bg_color_red_button</item>
        <item name="android:textColor">@color/color_button_text</item>
    </style>

    <!-- TextView -->
    <style name="CompanionText" parent="Widget.AppCompat.TextView" />

    <style name="CompanionText.Subhead" parent="Base.TextAppearance.AppCompat.Subhead">
        <item name="android:textColor">@color/text_black</item>
    </style>

    <style name="CompanionText.Subhead.Secondary" parent="Base.TextAppearance.AppCompat.Subhead">
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="CompanionText.Subhead.Bold" parent="Base.TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CompanionText.Subhead.Small" parent="Base.TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="CompanionText.Body.Secondary" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="CompanionText.Body.Headline" parent="Base.TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="CompanionText.Label.Secondary" parent="CompanionText">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="CompanionText.Headline" parent="CompanionText">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="CompanionText.Title" parent="TextAppearance.AppCompat.Body2">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/lato_regular</item>
    </style>

    <style name="CompanionText.Body.Small" parent="TextAppearance.AppCompat.Body2">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:fontFamily">@font/lato_regular</item>
    </style>

    <style name="CompanionText.Body.Small.Label" parent="CompanionText.Body.Small">
        <item name="android:layout_marginTop">@dimen/margin_padding_normal</item>
        <item name="android:layout_marginStart">@dimen/margin_padding_large</item>
        <item name="android:layout_marginEnd">@dimen/margin_padding_normal</item>
    </style>

    <style name="CompanionText.SubTitle" parent="Base.TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="CompanionText.Body" parent="CompanionText">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="CompanionText.Title.Bold" parent="Base.TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">@dimen/margin_padding_small</item>
        <item name="android:layout_marginStart">@dimen/margin_padding_large</item>
        <item name="android:layout_marginEnd">@dimen/margin_padding_large</item>
    </style>

    <style name="CompanionText.Label.Bold" parent="CompanionText.Title.Bold">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">@dimen/margin_padding_normal</item>
        <item name="android:layout_marginStart">@dimen/margin_padding_large</item>
        <item name="android:layout_marginEnd">@dimen/margin_padding_normal</item>
    </style>

    <style name="CompanionText.Label.Value" parent="CompanionText.Label.Bold">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_marginTop">@dimen/margin_padding_xsmall</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginEnd">@dimen/margin_padding_small</item>
    </style>

    <!-- EditText -->
    <style name="CompanionEditText" parent="Widget.AppCompat.EditText" />

    <style name="CompanionEditText.Background" parent="CompanionEditText">
        <item name="android:padding">@dimen/margin_padding_normal</item>
        <item name="android:backgroundTint" tools:targetApi="lollipop">@color/gray_30</item>
    </style>

    <style name="CompanionEditText.NoBackground" parent="CompanionEditText">
        <item name="android:padding">@dimen/margin_padding_normal</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <!-- Toolbar -->
    <style name="Toolbar.TitleText" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- BottomAppBar -->
    <style name="BottomAppBar" parent="Widget.MaterialComponents.BottomAppBar.Colored">
        <item name="backgroundTint">@color/bottomBar</item>
    </style>

    <!-- Menu -->
    <style name="menu_item_color">
        <item name="android:textColor">@color/text_black</item>
    </style>

    <!-- SnackBar -->
    <style name="SnackBarBackground" parent="Widget.MaterialComponents.Snackbar">
        <item name="android:background">@drawable/snackbar_default</item>
    </style>

    <style name="SnackBarText" parent="Widget.MaterialComponents.Snackbar.TextView">
        <item name="android:textColor">@color/snackbarTxtColor</item>
    </style>

    <style name="SnackBarButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/snackbarBtColor</item>
    </style>
  
    <!-- Dialog -->
    <style name="DialogCustom" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:background">@color/dialogColor</item>
        <item name="android:textColorAlertDialogListItem">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_primary</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButton</item>
    </style>

    <style name="PositiveButton" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="lineSpacing">0.5dp</item>
    </style>

    <style name="NegativeButton" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="lineSpacing">0.5dp</item>
    </style>

    <style name="BannerButton" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">true</item>
        <item name="lineSpacing">0.5dp</item>
    </style>

</resources>
