<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="titleTextColor">@android:color/white</item>
    </style>

    <!-- Button -->
    <style name="AudioMothButton" parent="Widget.AppCompat.Button">
        <item name="android:minWidth">120dp</item>
    </style>

    <style name="AudioMothButton.Primary" parent="AudioMothButton">
        <item name="android:background">@drawable/bg_color_primary_button</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AudioMothButton.GreenButton" parent="AudioMothButton">
        <item name="android:background">@drawable/bg_color_primary_button</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AudioMothButton.RedButton" parent="AudioMothButton">
        <item name="android:background">@drawable/bg_color_red_button</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AudioMothButton.GreyButton" parent="AudioMothButton">
        <item name="android:background">@drawable/bg_color_grey_button</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="AudioMothButton.FacebookButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/bg_facebook_login_button</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AudioMothButton.BlackButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/bg_color_black_button</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AudioMothButton.GreenButton.Radius5" parent="AudioMothButton">
        <item name="android:background">@drawable/bg_color_green_radius_5</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!-- TextView -->
    <style name="AudioMothText" parent="Widget.AppCompat.TextView"/>

    <style name="AudioMothText.Subhead" parent="Base.TextAppearance.AppCompat.Subhead">
        <item name="android:textColor">@color/text_black</item>
    </style>

    <style name="AudioMothText.Subhead.Bold" parent="Base.TextAppearance.AppCompat.Subhead">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AudioMothText.Body.Secondary" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="AudioMothText.Body.Headline" parent="Base.TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="AudioMothText.Label.Secondary" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="AudioMothText.Label.Secondary" parent="AudioMothText">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="AudioMothText.Headline" parent="AudioMothText">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="AudioMothText.Title" parent="TextAppearance.AppCompat.Body2">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="AudioMothText.SubTitle" parent="Base.TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="AudioMothText.Body" parent="AudioMothText">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- EditText -->
    <style name="AudioMothEditText" parent="Widget.AppCompat.EditText" />

    <style name="AudioMothEditText.Background" parent="AudioMothEditText">
        <item name="android:padding">@dimen/margin_padding_normal</item>
        <item name="android:backgroundTint" tools:targetApi="lollipop">@color/gray_30</item>
    </style>

    <style name="AudioMothEditText.NoBackground" parent="AudioMothEditText">
        <item name="android:padding">@dimen/margin_padding_normal</item>
        <item name="android:background">@color/transparent</item>
    </style>

</resources>
