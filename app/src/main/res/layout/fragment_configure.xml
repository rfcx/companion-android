<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".view.configure.ConfigureFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:title="@string/configure"
        app:titleTextColor="@color/text_black" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/sampleRateLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:orientation="vertical"
                android:paddingTop="@dimen/margin_padding_normal"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/sampleRateTextView"
                    style="@style/AudioMothText.Subhead"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/margin_padding_normal"
                    android:paddingEnd="@dimen/margin_padding_normal"
                    android:text="@string/sample_rate" />

                <TextView
                    android:id="@+id/sampleRateValueTextView"
                    style="@style/AudioMothText.Body.Secondary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/margin_padding_normal"
                    android:paddingEnd="@dimen/margin_padding_normal"
                    android:paddingBottom="@dimen/margin_padding_small"
                    tools:text="8kHz (default)" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/margin_padding_small"
                    android:background="@color/gray_30" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/gainLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:orientation="vertical"
                android:paddingTop="@dimen/margin_padding_normal"
                app:layout_constraintTop_toBottomOf="@id/sampleRateLayout">

                <TextView
                    android:id="@+id/gainTextView"
                    style="@style/AudioMothText.Subhead"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/margin_padding_normal"
                    android:paddingEnd="@dimen/margin_padding_normal"
                    android:text="@string/gain" />

                <TextView
                    android:id="@+id/gainValueTextView"
                    style="@style/AudioMothText.Body.Secondary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/margin_padding_normal"
                    android:paddingEnd="@dimen/margin_padding_normal"
                    android:paddingBottom="@dimen/margin_padding_small"
                    tools:text="3 (default)" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/margin_padding_small"
                    android:background="@color/gray_30" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/sleepDurationLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:orientation="vertical"
                android:paddingTop="@dimen/margin_padding_normal"
                app:layout_constraintTop_toBottomOf="@id/gainLayout">

                <TextView
                    android:id="@+id/sleepDurationTextView"
                    style="@style/AudioMothText.Subhead"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/margin_padding_normal"
                    android:paddingEnd="@dimen/margin_padding_normal"
                    android:text="@string/sleep_duration" />

                <TextView
                    android:id="@+id/sleepDurationValueTextView"
                    style="@style/AudioMothText.Body.Secondary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/margin_padding_normal"
                    android:paddingEnd="@dimen/margin_padding_normal"
                    android:paddingBottom="@dimen/margin_padding_small"
                    tools:text="0 second" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/recordingDurationLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/sleepDurationLayout">

                <TextView
                    android:id="@+id/recordingDurationTextView"
                    style="@style/AudioMothText.Subhead"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/margin_padding_normal"
                    android:paddingEnd="@dimen/margin_padding_normal"
                    android:text="@string/recording_duration" />

                <TextView
                    android:id="@+id/recordingDurationValueTextView"
                    style="@style/AudioMothText.Body.Secondary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/margin_padding_normal"
                    android:paddingEnd="@dimen/margin_padding_normal"
                    android:paddingBottom="@dimen/margin_padding_small"
                    tools:text="0 second" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/margin_padding_small"
                    android:background="@color/gray_30" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/customRecordingPeriodLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/margin_padding_normal"
                android:paddingStart="@dimen/margin_padding_normal"
                android:paddingEnd="@dimen/margin_padding_normal"
                app:layout_constraintTop_toBottomOf="@id/recordingDurationLayout">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/customRecordingPeriodTextView"
                        style="@style/AudioMothText.Subhead"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/custom_recording_period" />

                    <TextView
                        android:id="@+id/alwaysRecordingTextView"
                        style="@style/AudioMothText.Body.Secondary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/always_recording"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/customRecordingPeriodLayout" />
                </LinearLayout>

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/customRecordingPeriodSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    tools:checked="false" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/customRecordingPeriodRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_padding_normal"
                android:background = "@drawable/bg_color_grey_button"
                app:layout_constraintTop_toBottomOf="@id/customRecordingPeriodLayout" />

            <androidx.constraintlayout.widget.Group
                android:id="@+id/addRecordingPeriodGroupView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:constraint_referenced_ids="startPeriodLayout,endPeriodLayout,addRecordingPeriodTextView,customRecordingPeriodRecyclerView" />

            <LinearLayout
                android:id="@+id/startPeriodLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/margin_padding_normal"
                android:paddingStart="@dimen/margin_padding_normal"
                android:paddingEnd="@dimen/margin_padding_normal"
                android:paddingBottom="@dimen/margin_padding_normal"
                app:layout_constraintTop_toBottomOf="@id/customRecordingPeriodRecyclerView">

                <TextView
                    android:id="@+id/startCustomPeriodTextView"
                    style="@style/AudioMothText.Subhead"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="@string/start_period" />

                <TextView
                    android:id="@+id/startPeriodTextView"
                    style="@style/AudioMothText.Subhead"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    tools:text="10:00" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/endPeriodLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="@dimen/margin_padding_normal"
                android:paddingEnd="@dimen/margin_padding_normal"
                android:paddingBottom="@dimen/margin_padding_normal"
                app:layout_constraintTop_toBottomOf="@id/startPeriodLayout">

                <TextView
                    android:id="@+id/endCustomPeriodTextView"
                    style="@style/AudioMothText.Subhead"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="@string/end_period" />

                <TextView
                    android:id="@+id/endPeriodTextView"
                    style="@style/AudioMothText.Subhead"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    tools:text="11:00" />

            </LinearLayout>

            <TextView
                android:id="@+id/addRecordingPeriodTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:drawableStart="@drawable/ic_more"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:padding="@dimen/margin_padding_normal"
                android:textColor="@color/colorPrimary"
                android:background="?attr/selectableItemBackground"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/endPeriodLayout"
                tools:text="@string/add_recording_period" />

            <View
                android:id="@+id/recordingPeriodView"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_30"
                android:layout_marginTop="@dimen/margin_padding_normal"
                app:layout_constraintTop_toBottomOf="@id/addRecordingPeriodTextView" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/nextButton"
                style="@style/RangerButton.GreenButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_padding_normal"
                android:layout_marginTop="@dimen/margin_padding_xlarge"
                android:layout_marginEnd="@dimen/margin_padding_normal"
                android:layout_marginBottom="@dimen/margin_padding_xlarge"
                android:text="@string/next"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/recordingPeriodView" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
