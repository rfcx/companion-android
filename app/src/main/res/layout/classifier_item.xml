<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/country_item_child_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/fileVersionTextView"
        style="@style/AudioMothText.Label.Secondary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/margin_padding_xlarge"
        android:paddingTop="@dimen/margin_padding_normal"
        android:paddingEnd="@dimen/margin_padding_large"
        android:paddingBottom="@dimen/margin_padding_normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="TextView" />

    <TextView
        android:id="@+id/fileStatusTextView"
        style="@style/AudioMothText.Label.Secondary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/margin_padding_xlarge"
        android:paddingTop="@dimen/margin_padding_normal"
        android:paddingEnd="@dimen/margin_padding_large"
        android:paddingBottom="@dimen/margin_padding_normal"
        app:layout_constraintStart_toEndOf="@id/fileVersionTextView"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="TextView" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/fileSendButton"
        style="@style/OfflineMapButton"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/margin_padding_normal"
        android:enabled="true"
        android:text="@string/update_to"
        android:textSize="@dimen/text_xxsmall"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/fileVersionTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/fileVersionTextView" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/classifierDeActivateButton"
        style="@style/ClassifierButton.DeActive"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:enabled="true"
        android:text="deactivate"
        android:textSize="@dimen/text_xxsmall"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/fileSendButton"
        app:layout_constraintEnd_toEndOf="@id/fileSendButton"
        app:layout_constraintStart_toStartOf="@id/fileSendButton"
        app:layout_constraintTop_toTopOf="@id/fileSendButton" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/classifierActivateButton"
        style="@style/ClassifierButton.Active"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:enabled="true"
        android:text="activate"
        android:textSize="@dimen/text_xxsmall"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/fileSendButton"
        app:layout_constraintEnd_toEndOf="@id/fileSendButton"
        app:layout_constraintStart_toStartOf="@id/fileSendButton"
        app:layout_constraintTop_toTopOf="@id/fileSendButton" />

    <ProgressBar
        android:id="@+id/fileLoading"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/margin_padding_normal"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/fileVersionTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/fileVersionTextView" />

    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/uploadingProgress"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/margin_padding_normal"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/fileVersionTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/fileVersionTextView" />

    <TextView
        android:id="@+id/fileUpToDateTextView"
        style="@style/AudioMothText.Label.Secondary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/margin_padding_xlarge"
        android:paddingTop="@dimen/margin_padding_normal"
        android:paddingEnd="@dimen/margin_padding_large"
        android:paddingBottom="@dimen/margin_padding_normal"
        android:text="loaded"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/fileVersionTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/fileVersionTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>
