<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="@dimen/margin_padding_normal"
    android:paddingTop="@dimen/margin_padding_small"
    android:paddingEnd="@dimen/margin_padding_normal">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/placeNameTextView"
        style="@style/CompanionText.Subhead.Bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Place name" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/placeLocationTextView"
        style="@style/CompanionText.Body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_padding_small"
        tools:text="Place location" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/margin_padding_small"
        android:background="@color/divider" />

</LinearLayout>
