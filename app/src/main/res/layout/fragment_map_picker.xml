<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.rfcx.audiomoth.view.deployment.locate.MapPickerFragment">

    <com.mapbox.mapboxsdk.maps.MapView
        android:id="@+id/mapBoxPickerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/pinDeploymentImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_pin_map"
        app:layout_constraintBottom_toBottomOf="@id/mapBoxPickerView"
        app:layout_constraintEnd_toEndOf="@id/mapBoxPickerView"
        app:layout_constraintStart_toStartOf="@id/mapBoxPickerView"
        app:layout_constraintTop_toTopOf="@id/mapBoxPickerView" />

</androidx.constraintlayout.widget.ConstraintLayout>
