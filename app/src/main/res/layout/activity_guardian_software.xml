<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:fitsSystemWindows="true">

    <include
        android:id="@+id/toolbarLayout"
        layout="@layout/toolbar_default" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/roleLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/toolbarLayout">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineVertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="114dp"
            app:layout_constraintStart_toEndOf="@id/guardianRole" />

        <TextView
            android:id="@+id/adminRole"
            style="@style/AudioMothText.SubTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:padding="@dimen/margin_padding_normal"
            android:text="@string/admin_role"
            android:textColor="@color/text_primary"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/adminRoleVersion"
            style="@style/AudioMothText.Body.Secondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:padding="@dimen/margin_padding_normal"
            android:text="@string/not_found_software"
            android:textStyle="italic"
            app:layout_constraintBottom_toBottomOf="@id/adminRole"
            app:layout_constraintStart_toEndOf="@id/guidelineVertical"
            app:layout_constraintTop_toTopOf="@id/adminRole" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/adminDownloadButton"
            style="@style/OfflineMapButton"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/margin_padding_normal"
            android:enabled="true"
            android:text="@string/download"
            android:textSize="@dimen/text_xxsmall"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/adminRole"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/adminRole" />

        <ProgressBar
            android:id="@+id/adminLoading"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="@dimen/margin_padding_normal"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/adminRole"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/adminRole" />

        <TextView
            android:id="@+id/classifyRole"
            style="@style/AudioMothText.SubTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:padding="@dimen/margin_padding_normal"
            android:text="@string/classify_role"
            android:textColor="@color/text_primary"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/adminRole" />

        <TextView
            android:id="@+id/classifyRoleVersion"
            style="@style/AudioMothText.Body.Secondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:padding="@dimen/margin_padding_normal"
            android:text="@string/not_found_software"
            android:textStyle="italic"
            app:layout_constraintBottom_toBottomOf="@id/classifyRole"
            app:layout_constraintStart_toEndOf="@id/guidelineVertical"
            app:layout_constraintTop_toTopOf="@id/classifyRole" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/classifyDownloadButton"
            style="@style/OfflineMapButton"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/margin_padding_normal"
            android:enabled="true"
            android:text="@string/download"
            android:textSize="@dimen/text_xxsmall"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/classifyRole"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/classifyRole" />

        <ProgressBar
            android:id="@+id/classifyLoading"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="@dimen/margin_padding_normal"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/classifyRole"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/classifyRole" />

        <TextView
            android:id="@+id/guardianRole"
            style="@style/AudioMothText.SubTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:padding="@dimen/margin_padding_normal"
            android:text="@string/guardian_role"
            android:textColor="@color/text_primary"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/classifyRole" />

        <TextView
            android:id="@+id/guardianRoleVersion"
            style="@style/AudioMothText.Body.Secondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:padding="@dimen/margin_padding_normal"
            android:text="@string/not_found_software"
            android:textStyle="italic"
            app:layout_constraintBottom_toBottomOf="@id/guardianRole"
            app:layout_constraintStart_toEndOf="@id/guidelineVertical"
            app:layout_constraintTop_toTopOf="@id/guardianRole" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/guardianDownloadButton"
            style="@style/OfflineMapButton"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/margin_padding_normal"
            android:enabled="true"
            android:text="@string/download"
            android:textSize="@dimen/text_xxsmall"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/guardianRole"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/guardianRole" />

        <ProgressBar
            android:id="@+id/guardianLoading"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="@dimen/margin_padding_normal"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/guardianRole"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/guardianRole" />

        <TextView
            android:id="@+id/updaterRole"
            style="@style/AudioMothText.SubTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:padding="@dimen/margin_padding_normal"
            android:text="@string/updater_role"
            android:textColor="@color/text_primary"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/guardianRole" />

        <TextView
            android:id="@+id/updaterRoleVersion"
            style="@style/AudioMothText.Body.Secondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:padding="@dimen/margin_padding_normal"
            android:text="@string/not_found_software"
            android:textStyle="italic"
            app:layout_constraintBottom_toBottomOf="@id/updaterRole"
            app:layout_constraintStart_toEndOf="@id/guidelineVertical"
            app:layout_constraintTop_toTopOf="@id/updaterRole" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/updaterDownloadButton"
            style="@style/OfflineMapButton"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/margin_padding_normal"
            android:enabled="true"
            android:text="@string/download"
            android:textSize="@dimen/text_xxsmall"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/updaterRole"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/updaterRole" />

        <ProgressBar
            android:id="@+id/updaterLoading"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="@dimen/margin_padding_normal"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/updaterRole"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/updaterRole" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ProgressBar
        android:id="@+id/softwareLoading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbarLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>
