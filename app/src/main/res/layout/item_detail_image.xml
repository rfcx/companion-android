<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/size_deployment_image"
    android:layout_height="@dimen/size_deployment_image"
    android:layout_marginStart="@dimen/margin_padding_xsmall"
    android:layout_marginEnd="@dimen/margin_padding_xsmall"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:contentDescription="@string/desc_deployment_image"
        android:scaleType="centerCrop"
        tools:src="@drawable/bg_grey_light" />

    <ImageView
        android:id="@+id/syncImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_padding_xsmall"
        android:contentDescription="@string/sync"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:layout_constraintVertical_bias="1"
        tools:src="@drawable/ic_cloud_done_16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>